[Unit]
Description=<%= @description %>
$after.each |String $afr| {
After=${afr}
}
<% [@requires].each do |req| -%>
Requires=<%= req %>
<% end -%>
[Service]
<% [@execstartpre].each do |exp| -%>
ExecStartPre=<%= exp %>
<% end -%>
ExecStart=<%= @execstart %>
<% if @restartsec -%>RestartSec=<%= @restartsec %><% end %>
<% if @restart -%>Restart=<%= @restart %><% end %>
<% if @wantedby -%>WantedBy=<%= @wantedby %><% end %>
